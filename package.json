{
  "name": "test",
  "version": "1.0.0",
  "description": "Test project for deso to learn yarn",
  "author": "Deso",
  "license": "MIT",
  "dependencies": {
    "material-icons": "^0.3.1",
    "node-sass": "^6.0.1",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.1.0",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "dev": "yarn run watch:scss",
    "watch:scss": "node-sass src/styles/main.scss -o src/dist/css --watch",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint --fix \"**/*.js\"",
    "build:prod": "yarn run build:scss && yarn run lint",
    "build:scss": "node-sass src/styles/main.scss -o src/dist/css"
  }
}
